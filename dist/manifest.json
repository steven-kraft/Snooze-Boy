{
    "manifest_version": 2,

    "name": "Snooze Boy",
    "description":
        "Tab \"snoozing\" extension, designed to keep your tabs out of the way until you need them.",
    "version": "1.0.0",

    "browser_action": {
        "default_icon": "icon48.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["js/eventPage.js"]
    },

    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "permissions": ["storage", "tabs"]
}
